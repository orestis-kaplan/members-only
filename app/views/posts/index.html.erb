<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if logged_in?  %>
      <h1>Your Posts</h1>
      <%= render @posts %>
    <% else %>
    <h1>All Posts</h1>
      <% @posts.each do |post| %>
        <ul style="list-style: none;">
          <li>Title: <%= post.title %></li>
          <li>Body: <%= post.body %></li>
          <li>Posted by: <b><%= post.user.name %></b></li>
          <br><br>
        </ul>
      <% end %>
    <% end %>
    <%= link_to 'Create Post',new_post_path %><br>
    <% if (!current_user.nil?)  %>
      <%= link_to 'Log out',logout_path,method: :delete %>
    <% end %>
  </div>
</div>
